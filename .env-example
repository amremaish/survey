# Django
SECRET_KEY=change-me-to-a-long-random-string
DEBUG=1

# Public base URL used in emails and links
SITE_URL=http://localhost:8000

# Responses encryption secret (used to encrypt SurveyAnswer.encrypted_value)
# Use a long random string (32+ chars). In production, rotate carefully.
RESPONSES_ENCRYPTION_SECRET=change-me-encryption-secret

# SMTP (Gmail example)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=1
EMAIL_HOST_USER=your@gmail.com
EMAIL_HOST_PASSWORD=your-gmail-app-password
DEFAULT_FROM_EMAIL=<your@gmail.com>

# Celery (broker/result)
# For local dev, use Redis. In CI, you may set CELERY_EAGER=1 for sync tasks.
# Celery broker (Redis). Set EAGER=0 to enable async processing.
CELERY_BROKER_URL=redis://redis:6379/0
CELERY_RESULT_BACKEND=redis://redis:6379/0
CELERY_EAGER=0


# Redis cache for Django
CACHE_BACKEND=django_redis.cache.RedisCache
CACHE_LOCATION=redis://redis:6379/1

# Database (PostgreSQL)
DB_ENGINE=django.db.backends.postgresql
DB_NAME=survey
DB_USER=postgres
DB_PASSWORD=postgres
DB_HOST=127.0.0.1
DB_PORT=5432
DB_TEST_NAME=survey_test

# Bootstrap superuser (created on first run after migrations if not existing)
SUPERUSER_USERNAME=admin
SUPERUSER_EMAIL=admin@example.com
SUPERUSER_PASSWORD=change-me-strong
