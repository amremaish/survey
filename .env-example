# Django
SECRET_KEY=change-me-to-a-long-random-string
DEBUG=1

# Public base URL used in emails and links
SITE_URL=http://localhost:8000

# Responses encryption secret (used to encrypt SurveyAnswer.encrypted_value)
# Use a long random string (32+ chars). In production, rotate carefully.
RESPONSES_ENCRYPTION_SECRET=change-me-encryption-secret

# SMTP (Gmail example)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=1
EMAIL_HOST_USER=your@gmail.com
EMAIL_HOST_PASSWORD=your-gmail-app-password
DEFAULT_FROM_EMAIL=<your@gmail.com>

# Celery (broker/result)
# For local dev, use Redis. In CI, you may set CELERY_EAGER=1 for sync tasks.
CELERY_BROKER_URL=redis://127.0.0.1:6379/0
CELERY_RESULT_BACKEND=redis://127.0.0.1:6379/0
CELERY_EAGER=0

# Caching (Redis recommended for production)
# To use Redis cache, set CACHE_BACKEND to django_redis.cache.RedisCache
# and CACHE_LOCATION to your Redis URL.
CACHE_BACKEND=django_redis.cache.RedisCache
CACHE_LOCATION=redis://127.0.0.1:6379/1

# CORS (optional â€“ defaults allow localhost)
# CORS_ALLOW_ALL_ORIGINS=1

# Database (PostgreSQL)
DB_ENGINE=django.db.backends.postgresql
DB_NAME=survey
DB_USER=postgres
DB_PASSWORD=postgres
DB_HOST=127.0.0.1
DB_PORT=5432
DB_TEST_NAME=survey_test
